%%[
    set @eventName = AttributeValue('CampaignMember:Event_Name__c')
]%%<script language="javascript" runat="server">
Platform.Load("Core","1.1.1");
var eventName = Variable.GetValue("@eventName");
var disposition = Concat("attachment; filename="+"EinladungMacromedia"+".ics");
HTTPHeader.SetValue("Content-type","text/calendar; charset=utf-8");
HTTPHeader.SetValue("Content-Disposition",disposition);
</script>%%[
	set @startDate = AttributeValue('CampaignMember:Event_Date__c')
    set @startTime = AttributeValue('CampaignMember:Event_Time__c') 

    set @startTimeRebuild = Format(@startDate,"MM'/'dd'/'yyyy")
    set @startTimeTrim = Concat(Substring(@startTime,1, Subtract(IndexOf(@startTime," "),1)),":00")
    set @startDateTimeStamp = Concat(@startTimeRebuild," ",@startTimeTrim)
    set @startTimeFormatted = Format(@startDateTimeStamp,"yyyyMMdd'T'HHmmss")
    set @endDateFormatted = Format(DateAdd(@startDateTimeStamp,90,"MI"),"yyyyMMdd'T'HHmmss")
    set @formattedDateNow = Format(SystemDateToLocalDate(Now()),"yyyyMMdd'T'HHmmss")
	set @anfahrtsBeschreibung = AttributeValue('CampaignMember:Anfahrtsbeschreibung_DE__c')
    set @standort = AttributeValue('CampaignMember:Standort_Ort__c')
    set @meetingURL = AttributeValue('CampaignMember:Teilnahmelink__c')
]%%BEGIN:VCALENDAR
PRODID:-//Macromedia//DE
VERSION:2.0
CALSCALE:GREGORIAN
METHOD:REQUEST
BEGIN:VEVENT
DTSTART:%%=v(@startTimeFormatted)=%%
DTEND:%%=v(@endDateFormatted)=%%
DTSTAMP:%%=v(@formattedDateNow)=%%
CREATED:%%=v(@formattedDateNow)=%%
SUMMARY:%%CampaignMember:Event_Name__c%%
DESCRIPTION:Vielen Dank f√ºr deine Anmeldung zu unserem Event "%%CampaignMember:Event_Name__c%%" am %%=Format(AttributeValue('CampaignMember:Event_Date__c'),"dd.MM.yyyy")=%% um %%CampaignMember:Event_Time__c%%.\n\nUnser Event "%%CampaignMember:Event_Name__c%%" wird %%[ set @variable = AttributeValue('CampaignMember:Event_Type__c') IF @variable == 'Vor Ort' THEN SET @value = Concat("vor Ort am Campus ", @standort , " stattfinden. \nAnfahrtsbeschreibung:\n",@anfahrtsBeschreibung) ELSEIF @variable == 'Virtuell' THEN SET @value = Concat("virtuell stattfinden.\nDein Teilnahmelink:\n",@meetingURL) ELSE SET @value = Concat("virtuell und vor Ort stattfinden. \nDein Teilnahmelink:\n",@meetingURL,"\nAnfahrtsbeschreibung:\n",@anfahrtsBeschreibung) ENDIF]%% %%=v(@value)=%% \nWir freuen uns auf dich.
STATUS:CONFIRMED
BEGIN:VALARM
TRIGGER:-PT60M
ACTION:DISPLAY
DESCRIPTION:Reminder
END:VALARM
END:VEVENT
END:VCALENDAR