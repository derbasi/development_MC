<script language="javascript" runat="server">Platform.Load("Core","1.1.1");HTTPHeader.SetValue("Content-type","text/calendar; charset=utf-8");HTTPHeader.SetValue("Content-Disposition","attachment; filename=EinladungMacromedia.ics");</script>%%[
	set @startDate = AttributeValue('CampaignMember:Event_Date__c')
    set @startTime = AttributeValue('CampaignMember:Event_Time__c') 

    set @startTimeRebuild = Format(@startDate,"MM'/'dd'/'yyyy")
    set @startTimeTrim = Concat(Substring(@startTime,1, Subtract(IndexOf(@startTime," "),1)),":00")
    set @startDateTimeStamp = Concat(@startTimeRebuild," ",@startTimeTrim)
    set @startTimeFormatted = Format(@startDateTimeStamp,"yyyyMMdd'T'HHmmss")
    set @endDateFormatted = Format(DateAdd(@startDateTimeStamp,90,"MI"),"yyyyMMdd'T'HHmmss")
    set @formattedDateNow = Format(SystemDateToLocalDate(Now()),"yyyyMMdd'T'HHmmss")
	set @meetingURL = AttributeValue('CampaignMember:Teilnahmelink__c')
]%%BEGIN:VCALENDAR
PRODID:-//Macromedia//DE
VERSION:2.0
CALSCALE:GREGORIAN
METHOD:REQUEST
BEGIN:VEVENT
DTSTART:%%=v(@startTimeFormatted)=%%
DTEND:%%=v(@endDateFormatted)=%%
DTSTAMP:%%=v(@formattedDateNow)=%%
CREATED:%%=v(@formattedDateNow)=%%
SUMMARY:%%CampaignMember:Event_Name__c%%
DESCRIPTION:Vielen Dank f√ºr deine Anmeldung zu unserem Event "%%CampaignMember:Event_Name__c%%" am %%=Format(AttributeValue('CampaignMember:Event_Date__c'),"dd.MM.yyyy")=%% um %%CampaignMember:Event_Time__c%%.\n\nUnser Event "%%CampaignMember:Event_Name__c%%" wird %%[ set @variable = AttributeValue('CampaignMember:Event_Type__c') IF @variable == 'Vor Ort' THEN  SET @value = "vor Ort am Campus %%CampaignMember:Standort_Ort__c%% stattfinden. \nAnfahrtsbeschreibung: Anfahrtsbeschreibungen" IF @variable == 'Virtuell' THEN  SET @value = Concat("virtuell stattfinden.\nDein Teilnahmelink: ",@meetingURL) ELSE SET @value = Concat("virtuell und vor Ort stattfinden. \nDein Teilnahmelink: ",@meetingURL,". ","Anfahrtsbeschreibung: Anfahrtsbeschreibungen") ENDIF ENDIF]%% %%=v(@value)=%% \nWir freuen uns auf dich.
STATUS:CONFIRMED
BEGIN:VALARM
TRIGGER:-PT60M
ACTION:DISPLAY
DESCRIPTION:Reminder
END:VALARM
END:VEVENT
END:VCALENDAR